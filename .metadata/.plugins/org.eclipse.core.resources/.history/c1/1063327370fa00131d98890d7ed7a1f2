package edu.vuum.mocca;

import java.util.concurrent.locks.ReentrantLock;
import java.util.concurrent.locks.Lock;
import java.util.concurrent.locks.Condition;

/**
 * @class SimpleSemaphore
 *
 * @brief This class provides a simple counting semaphore
 *        implementation using Java a ReentrantLock and a
 *        ConditionObject.  It must implement both "Fair" and
 *        "NonFair" semaphore semantics, just liked Java Semaphores. 
 */
public class SimpleSemaphore {
    /**
     * Constructor initialize the data members.  
     */
    public SimpleSemaphore (int permits,
                            boolean fair)
    { 
        // TODO - you fill in here
    	numOfAvailablePermits = permits;
    	reentrantLock = new ReentrantLock(fair);
    	noAvailablePermits = reentrantLock.newCondition();
    }

    /**
     * Acquire one permit from the semaphore in a manner that can
     * be interrupted.
     */
    public void acquire() throws InterruptedException {
        // TODO - you fill in here
    	reentrantLock.lockInterruptibly();
    	try 
    	{
    		while (numOfAvailablePermits <= 0)
    			noAvailablePermits.await();
    		numOfAvailablePermits--;
    	} 
    	finally 
    	{
    		reentrantLock.unlock();
    	}
    }

    /**
     * Acquire one permit from the semaphore in a manner that
     * cannot be interrupted.
     */
    public void acquireUninterruptibly() {
        // TODO - you fill in here
    	reentrantLock.lock();
    	try 
    	{
    		while (numOfAvailablePermits <= 0)
    			noAvailablePermits.awaitUninterruptibly();
    		numOfAvailablePermits--;
    	} 
    	finally 
    	{
    		reentrantLock.unlock();
    	}
    }

    /**
     * Return one permit to the semaphore.
     */
    public void release() {
        // TODO - you fill in here
    	reentrantLock.lock();
    	try 
    	{
        	numOfAvailablePermits++;
        	if(numOfAvailablePermits > 0)
        		noAvailablePermits.signal();
    	} 
    	finally 
    	{
    		reentrantLock.unlock();
    	}
    }
    
    /**
     * Return the number of permits available.
     */
    public int availablePermits(){
    	// TODO - you fill in here
    	return numOfAvailablePermits; // You will change this value. 
    }
    
    /**
     * Define a ReentrantLock to protect the critical section.
     */
    // TODO - you fill in here
    private ReentrantLock reentrantLock;

    /**
     * Define a ConditionObject to wait while the number of
     * permits is 0.
     */
    // TODO - you fill in here
    private Condition noAvailablePermits;

    /**
     * Define a count of the number of available permits.
     */
    // TODO - you fill in here
    private volatile int numOfAvailablePermits;
}
